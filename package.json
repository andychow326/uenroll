{
  "name": "uenroll",
  "version": "1.0.0",
  "workspaces": [
    "server",
    "worker",
    "portal"
  ],
  "scripts": {
    "start:server": "npm run start -w server",
    "start:portal": "npm run start -w portal",
    "start:worker": "npm run start -w worker",
    "build:server": "npm run build -w server",
    "build:portal": "npm run build -w portal",
    "build:worker": "npm run build -w worker",
    "build": "run-s build:*",
    "prettier:server": "npm run prettier -w server",
    "prettier:portal": "npm run prettier -w portal",
    "prettier:worker": "npm run prettier -w worker",
    "prettier": "run-s prettier:*",
    "format:server": "npm run format -w server",
    "format:portal": "npm run format -w portal",
    "format:worker": "npm run format -w worker",
    "format": "run-s format:*",
    "lint:server": "npm run lint -w server",
    "lint:portal": "npm run lint -w portal",
    "lint:worker": "npm run lint -w worker",
    "lint": "run-s lint:*",
    "test:server": "npm run test -w server",
    "test:portal": "npm run test -w portal",
    "test:worker": "npm run test -w worker",
    "test": "run-s test:*",
    "ci:server": "run-s build:server prettier:server lint:server test:server",
    "ci:portal": "run-s build:portal prettier:portal lint:portal test:portal",
    "ci:worker": "run-s build:worker prettier:worker lint:worker test:worker",
    "ci": "run-s ci:*"
  },
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.38.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "29.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  }
}
